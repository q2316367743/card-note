{
    "main": "dist/index.html",
    "preload": "preload.js",
    "logo": "public/logo.png",
    "platform": [
        "win32",
        "darwin",
        "linux"
    ],
    "development": {
        "main": "http://localhost:5173/"
    },
    "pluginSetting": {
        "single": true,
        "height": 0
    },
    "features": [
        {
            "code": "launch",
            "explain": "卡片笔记",
            "icon": "public/logo.png",
            "platform": [
                "win32",
                "darwin",
                "linux"
            ],
            "cmds": [
                "卡片笔记"
            ]
        },
        {
            "code": "append",
            "explain": "卡片笔记",
            "icon": "public/logo.png",
            "platform": [
                "win32",
                "darwin",
                "linux"
            ],
            "cmds": [
                {
                    "type": "over",
                    "label": "新增卡片笔记",
                    "minLength": 1,
                    "maxLength": 500
                }
            ]
        },
        {
            "code": "search",
            "explain": "卡片笔记",
            "icon": "public/logo.png",
            "mainPush": true,
            "platform": [
                "win32",
                "darwin",
                "linux"
            ],
            "cmds": [
                {
                    "type": "over",
                    "label": "卡片笔记搜索",
                    "exclude": "\n/[\\\/\t\n]/",
                    "minLength": 1,
                    "maxLength": 500
                }
            ]
        }
    ]
}
